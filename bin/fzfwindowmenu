#!/usr/bin/env bash
# choose X-client and focus to one
# TODO: finish script

declare -a window_ids
declare -A windows
window_ids=$(bspc query -N)

for id in $window_ids; do
    windows[$id]="$(xprop -id $id WM_NAME)\n"
done

chosen=$(echo -e "${windows[@]}" | fzfmenu)

